/*==============================================================================
	Common Guide
  ============================================================================*/

@import 'base/common'

/*==============================================================================
	Fonts
  ============================================================================*/

@font-face
	font-family 'Dancing Script'
	font-style normal
	font-weight 400
	src local('Dancing Script'), local('DancingScript'), url('/static/fonts/DIN/DIN-Regular.ttf') format('woff2')
	unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000
@font-face
	font-family 'Dancing Script'
	font-style normal
	font-weight 700
	src local('Dancing Script Bold'), local('DancingScript-Bold'), url('/static/fonts/DIN/DIN-Bold.ttf') format('woff2')
	unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000


/*==============================================================================
	Local Variables
  ============================================================================*/

$default-width-window = $default-width-window-container

/*==============================================================================
	General Base Style
  ============================================================================*/

/* ---------------------------------------
	General Style
  --------------------------------------*/
@import 'base/general'

/* ---------------------------------------
	Default
  --------------------------------------*/
.container
	clear both
	margin 0 auto
	width $default-width-window

/* ---------------------------------------
	Divisor
  --------------------------------------*/
hr, .divisor
	height remify(10px)
	margin-top remify(20px)
	border-top remify(3px) dashed $black


/*==============================================================================
	Content
  ============================================================================*/

/* ---------------------------------------
	Header
  --------------------------------------*/

// @import 'includes/header'

/* ---------------------------------------
	Master
  --------------------------------------*/

// *update your style
.content
	background $blue

/* ---------------------------------------
	Footer
  --------------------------------------*/

// @import 'includes/footer'

/* =============================================================================
   Media Customized
   ========================================================================== */

@media $media-query-tablet
	*
		user-select(none)

	input, input:before, input:after, iframe
		user-select(initial)


/* =============================================================================
	Hacks (only those which are needed)
   =========================================================================== */

/* ---------------------------------------
	General IEs
  --------------------------------------*/
html.ie
	.accessibility-aid
		display none

/* ---------------------------------------
	Old IEs
  --------------------------------------*/
html.ltie9
	*:disabled, *.disabled, btn.disabled
		background $background-btn-default-color !important
